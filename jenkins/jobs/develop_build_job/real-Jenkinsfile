pipeline {
    agent any
    environment{
        JDK_PATH = tool name: 'Java 8_152'
        JAVA_HOME = "${JDK_PATH}"
    }

    stages {
        stage('Preparation'){
            steps{
                echo "JAVA_HOME: ${JAVA_HOME}"
                echo "env.JAVA_HOME: ${env.JAVA_HOME}"
                echo "JDK_PATH: ${JDK_PATH}"
            }
        }
        stage('Build') {
            agent {
                docker {
                    image 'maven:3.6-jdk-8'
                    args '-v ${JDK_PATH}:${JDK_PATH}'
                    reuseNode true
                }
            }
            steps {
                echo 'Starting Build stage...'
                configFileProvider([configFile(fileId: 'byggReleaseConfig', variable: 'MAVEN_SETTINGS')]) {
                    sh 'pwd'
                    echo 'Compiling, testing and building...'
                    sh 'mvn --global-settings ${MAVEN_SETTINGS} clean install'
                }
            }     
        }        
    }

    post {
        success {
            echo 'Build succeeded'
        }

        always {
            echo 'Starting results handling...'
            junit '**/target/surefire-reports/TEST-*.xml'
            jacoco()
            archiveArtifacts '**/target/*.jar'

            echo 'Cleaning workspace...'
            cleanWs()
        }
    }
}